@model IEnumerable<TPPizza.Web.DataAccessLayer.Entity.Pizza>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dough)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dough.DoughName)
            </td>
                <td>
                    @string.Join(", ", item.Ingredients.Select(i => i.IngredientName))
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
