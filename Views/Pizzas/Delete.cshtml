@using TPPizza.Web.Models.Pizza
@model DeleteViewModel


@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.PizzaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.PizzaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dough)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dough.DoughName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Ingredients.Select(i => i.IngredientName))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Pizza.PizzaId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
